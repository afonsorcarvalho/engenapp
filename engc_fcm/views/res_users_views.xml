<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Coloca fcm_token em uma nova aba chamada "Firebase Cloud Message" no formulÃ¡rio do usuÃ¡rio -->
    <record id="view_users_form_fcm_token_tab" model="ir.ui.view">
        <field name="name">res.users.form.fcm.tab</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Firebase Cloud Message">
                    <group>
                        <field name="fcm_token" readonly="1"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>

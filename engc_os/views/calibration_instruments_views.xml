<odoo>
  <data>


    <record model="ir.ui.view" id="engc_os.calibration_instruments_list">
      <field name="name">Instruments List</field>
      <field name="model">engc.calibration.instruments</field>
      <field name="arch" type="xml">
        <tree>

          <field name="name" />
          <field name="id_number" />
          <field name="marca" />
          <field name="modelo" />

          <!-- <field name="certificate_calibration" widget="pdf_viewer" /> -->

        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="engc_os.calibration_instruments_form">
      <field name="name">Instruments Form</field>
      <field name="model">engc.calibration.instruments</field>
      <field name="arch" type="xml">


        <form string="Instrumentos">
          <header>
            <!-- <button name="" string="" class="oe_highlight" states="" type=""/> -->
            <!-- <field name="situation_id" widget="statusbar"  /> -->
          </header>
          <sheet>
            <h2>
              <field name="name" />
            </h2>

            <group>
              <group string="Identificação">
                <field name="id_number" />
                <field name="marca" />
                <field name="modelo" />
                <field name="tag" />
              </group>

            </group>
            <notebook>
              <!-- <page string="Incerteza e Erros">
              <field name="uncertainty_ids"
              nolabel="1">
                <tree editable="bottom">
                  <field
              name="unit_of_measurement" />
                  <field name="uncertainty" />
                  <field
              name="erro_value" />
                  <field name="coverage_factor" />
                  <field
              name="resolution" />
                  <field name="veff" />
  
                </tree>
              <form string="Dados de incerteza">
                  <sheet>
                    <group>
              <field name="uncertainty" />
                      <field name="erro_value" />
                      <field
              name="coverage_factor" />
                      <field name="resolution" />
                      <field
              name="veff" />
                      <field name="unit_of_measurement" />
                    </group>
              </sheet>
                </form>
              </field>
              
            </page> -->
              <page string="Certificados">
                <field name="certificate_ids">
                  <tree>

                    <field name="certificate_number" />
                    <field name="certificate_partner" />
                    <field name="date_calibration" />
                    <field name="validate_calibration" />
                    <field name="date_next_calibration" />
                    <field name="certificate_calibration" widget="file"/>


                  </tree>
                  <form>
                    <group string="Certificado">
                      <field name="certificate_number" />
                      <field name="certificate_partner" />

                    </group>
                    <group string="Data e Validade">
                      <field name="date_calibration" />
                      <field name="validate_calibration" />

                    </group>
                    <notebook>
                      <page string="Resultados">

                        <field name="uncertainty_lines">
                          <tree editable="bottom" multi_edit="1">
                            <field name="unit_of_measurement" width="3" />
                            <field name="erro_value" width="1"/>
                            <field name="uncertainty" width="1"/>
                            <field name="coverage_factor" width="1"/>
                            <field name="veff" width="1" />
                            <field name="resolution" width="1" />

                          </tree>
                          <form>
                            <group>
                              <group>
                                <field name="unit_of_measurement" />
                                <field name="erro_value" />
                                <field name="uncertainty" />
                                <field name="coverage_factor" />
                                <field name="veff" />
                                <field name="resolution" />

                              </group>
                            </group>
                          </form>
                        </field>

                      </page>
                      <page string="Certificado">

                        <field name="certificate_calibration" widget="pdf_viewer" />

                      </page>
                    </notebook>
                  </form>
                </field>
              </page>

            </notebook>
          </sheet>
          <div class="oe_chatter" groups="base.group_multi_company">
            <field name="message_follower_ids" widget="mail_followers" />
            <field name="message_ids" widget="mail_thread" />
          </div>
        </form>

      </field>
    </record>


  </data>

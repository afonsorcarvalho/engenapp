<record id="engc_preventive_lst" model="ir.ui.view">
  <field name="name">engc.preventive.list</field>
  <field name="model">engc.preventive</field>
  <field name="arch" type="xml">
  
  
    <tree string="Preventivas" delete="true" create="true" edit="1" editable="top"
          decoration-bf="state=='programada'"
          
          decoration-danger="state == 'atrasada'"
          decoration-success="state == 'done'"
          decoration-muted="state == 'cancel'">
          <header>
          <button name="action_gera_os"
                string="Gera OS"
                type="object"
               
                help="Gerar Ordem de Serviço para essa preventiva imediatamente.
                Lembrando que ela será gerada automaticamente pelo sistema" />
              </header>
      <!--<button string="Gera OS" class="oe_highlight" icon="fa-briefcase" type="object" name="action_gera_os"/> -->
      <field name="state" widget="badge"
      decoration-bf="state=='programada'"
          
      decoration-danger="state == 'atrasada'"
      decoration-success="state == 'done'"
      decoration-muted="state == 'cancel'"
      />
      <field name="name"/>
      <field name="data_programada" string="Início"/>
      <field name="data_programada_fim" string="Fim"/>
      <field name="tempo_estimado"  widget="float_time" />
      <field name="client"/>
      <field name="cronograma"/>

      <field name="equipment" readonly="1"/>
      <field name="periodicity_ids" widget="many2many_tags" />
      <!-- <field name="grupo_id" widget="many2many_tags"/> -->
      <field name="dias_de_atraso" readonly="1"/>

      <field name="tecnico"/>
      <field name="gerada_os" string="OS gerada?" />
      <field name="os_id" string="OS nº" />
      <!-- <field name="color" widget="color"/> -->
    </tree>
  </field>
</record>

<record id="engc_preventive_search" model="ir.ui.view"> 
    <field name="model">engc.preventive</field> 
    <field name="arch" type="xml"> 
        <search> 
          <field name="name" /> 
          <field name="client"/> 
          <field name="equipment" 
           
          />
          <field name="tecnico"/>
          <field name="state" />
          <field name="os_id" string="OS nº" />
          <field name="dias_de_atraso" />
          <field name="data_programada" string="Início"/>
          
        </search> 
    </field> 
</record>

<record id="engc_preventive_calendar" model="ir.ui.view">
  <field name="name">engc.preventive.calendar</field>
  <field name="model">engc.preventive</field>
  <field name="arch" type="xml">
      <calendar string="Preventivas" 
        date_start="data_programada" date_stop="data_programada_fim"
        quick_add = "False"
        color = "state"
        form_view_id = "dgt_preventiva_form"
        event_open_popup = "true"
        delete = "false"
        >
          <field name="name"/>
          <field name="data_programada" string="Início"/>
          <field name="data_programada_fim" string="Fim"/>
          <field name="client"/>
          <field name="cronograma"/>
          <field name="equipment" readonly="1" filters="1"/>
          <field name="periodicity_ids" widget="many2many_tags"/>
          <field name="dias_de_atraso" readonly="1"/>
          <field name="tecnico" />
          <field name="gerada_os" string="OS gerada?" />
          <field name="os_id" string="OS nº" />
          
          <!-- <field name="color" widget="color"/> -->
      </calendar>
  </field>
</record>


<!--

MENU POPUP DE CONCLUIDO COM SUCESSO

-->
<record id="engc_preventive_message_wizard_form" model="ir.ui.view">
    <field name="name">engc.preventive.message.wizard.form</field>
    <field name="model">engc.preventive.message.wizard</field>
    <field name="arch" type="xml">
        <form >
        <i class="fa fa-info-circle" aria-hidden="true"><field name="message"/></i>
            <h1><field name="message"/></h1>
            
        <footer>
            <button name="action_ok" string="Ok" type="object" default_focus="1" class="oe_highlight"/> 
        </footer>
        </form>
    </field>
</record>

<!--

CRONOGRAMA

-->
    <record id="engc_preventive_cronograma_form" model="ir.ui.view">
			<field name="name">engc.preventive.cronograma.form</field>
			<field name="model">engc.preventive.cronograma</field>
			<field name="arch" type="xml">
				<form>
         <header>
           <button name="action_gera_cronograma" type="object" string="Gerar Preventivas" class="oe_highlight" />
                                                         
           <field name="state" widget="statusbar"  />
         </header>
          <sheet>
            <h1><field name="name"/></h1>
            <group>
              <group>
                <field name="description" string="Descrição"/>
              </group>
            </group>
            <group>
              <group>
                <field name="date_start" string="Início"/>
              </group>
              <group>
                <field name="date_stop" string="Fim"/>
              </group>
            </group>
            <group>
              <group col="12">
                <label for="allowed_weekdays_ids" string="Dias da Semana Permitidos"/>
                <div class="o_row">
                  <field name="allowed_weekdays_ids" widget="many2many_checkboxes" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}" nolabel="1"/>
                </div>
              </group>
            </group>
            <group string="Horários de Trabalho">
              <group>
                <field name="morning_start_time" string="Início Manhã" placeholder="08:00"/>
                <field name="morning_end_time" string="Fim Manhã" placeholder="12:00"/>
              </group>
              <group>
                <field name="afternoon_start_time" string="Início Tarde" placeholder="14:00"/>
                <field name="afternoon_end_time" string="Fim Tarde" placeholder="18:00"/>
              </group>
            </group>
        
            <notebook>
              
              <page string="Equipamentos" >
                     <field name="equipments" />
              </page>
              <page string="Técnicos" >
                     <field name="tecnicos" />
              </page>
             
            </notebook>         
          </sheet>
				</form>
			</field>
		</record>
    <record id="engc_preventive_cronograma_lst" model="ir.ui.view">
			<field name="name">engc.preventive.cronograma.list</field>
			<field name="model">engc.preventive.cronograma</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="description"/>
					<field name="date_start"/>
          <field name="date_stop"/>
          <field name="tecnicos" 
            widget="many2many_tags"
            />
				</tree>
			</field>
		</record>


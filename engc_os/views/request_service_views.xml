<odoo>
    <data>
        <record id="view_tree_request_service" model="ir.ui.view">
            <field name="name">request.service.tree</field>
            <field name="model">engc.request.service</field>
            <field name="arch" type="xml">
                <tree default_order="create_date desc">
                    <field name="state" widget="badge"
                        decoration-info="state == 'new'"
                        decoration-warning="state == 'in_progress'"
                        decoration-success="state == 'done'"
                        decoration-danger="state == 'cancel'" />
                    <field name="name" />
                    <field name="create_uid" />
                    <field name="requester" />
                    <field name="request_date" />
                    <field name="schedule_date" />
                    <field name="priority" />
                </tree>
            </field>
        </record>

        <record id="view_form_request_service" model="ir.ui.view">
            <field name="name">request.service.form</field>
            <field name="model">engc.request.service</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_gera_os" string="Gerar OS" class="oe_highlight"
							states="new" type="object"  />
                        <field name="state" widget="statusbar" 
                        options="{'clickable': True}" />
                    </header>
                    <sheet>
                        <div name="button_box" position="inside">
                            <button class="oe_stat_button" string="Ordens de serviços" type="object"
                                name="action_go_os"
                                attrs="{'invisible': [('os_count', '=', 0)]}"
                                icon="fa-wrench">
                                <field string="Ordens de Serviços" name="os_count" widget="statinfo" />
                            </button> 
                            
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" />
                            </h1>
                            

                                <label for="company_id" class="oe_edit_only" />
                                <h2>
                                    <field name="company_id"  attrs="{'readonly': [('state','in',('done'))] }"
                                        options="{'no_create': True, 'no_create_edit':True}" />
                                </h2>
                            
                        </div>
                        <group>
                            <group string="Dados da requisição">
                                <field name="requester"/>
                                <field name="department" required="1"
                                    options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"
                                />
                                <field name="equipment_ids_domain" 
                                    invisible="1" 
                                />
                                <field name="equipment_ids" 
                                    widget="many2many_tags"                
                                    options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"
                                    domain = 'equipment_ids_domain'
                                />
                                <field name="maintenance_type"/>
                                <field name="maintenance_team_id" 
                                    options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"/>
                                <field name="tecnicos"  
                                    options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"
                                    domain="[('company_id','=',company_id)]"
                                    /> 
                                </group>
                                <group string="Datas">
                                    <field name="request_date" />
                                    <field name="schedule_date" string="Dt. Programada"/>
                                    <field name="close_date" string="Dt. Conclusão"/>
                                    <field name="who_executor" 
                                    widget="radio"
                                    />
                                    <field name="os_gerada" groups="base.group_no_one"/>
                                    <field name="priority" widget="priority"/>
                                
                            </group>

                            
                            
                        </group>
                        
                        <group string="Descrição da Solicitação">

                            <field name="description" string="Descrição" 
                            required="1"
                            />
                        </group>
                    </sheet>
                    <div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" />
                        <field name="activity_ids"/>
						<field name="message_ids" widget="mail_thread" />
					</div>
                </form>
            </field>
        </record>
        
    </data>
</odoo>
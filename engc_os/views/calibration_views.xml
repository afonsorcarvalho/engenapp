<odoo>
  <data>


    <record model="ir.ui.view" id="engc_os.calibration_list">
      <field name="name">Calibration List</field>
      <field name="model">engc.calibration</field>
      <field name="arch" type="xml">
        <tree>

          <field name="name" />

        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="engc_os.calibration_form">
      <field name="name">Calibration Form</field>
      <field name="model">engc.calibration</field>
      <field name="arch" type="xml">
        <form string="Calibrações e Ensaios">
          <header>
           <button name="action_confirmed" string="Confirmar" class="oe_highlight" states="draft" type="object"/>
           <button name="action_done" string="Concluir" class="oe_highlight" states="confirmed" type="object"/>
           <button name="action_draft" string="Rascunho" class="oe_highlight" states="done" type="object"/>
            <field name="state" widget="statusbar" />
          </header>
          <sheet>
            <h2>
              <field name="name" />
            </h2>
            <group>
              <group>
                <field name="company_id"
                  groups="base.group_multi_company"
                />
              </group>
            </group>
            <group>
              <group string="Dados do Cliente">
                <field name="client_id" />
              </group>
              <group string="Dados do equipamento">
                <field name="equipment_id" />
              </group>
              
            </group>
            <group >
                <group string="Dados da Calibração">
                  <field name="technician_id" />
                  <field name="duration" />
                  <field name="measurement_procedure" />
                 
                </group>
                <group string="Datas">
                  <field name="date_calibration" />
                  <field name="date_next_calibration" />
                  <field name="issue_date" />
                </group>
            </group>
            <notebook>
              <page string="Instrumentos Utilizados">
               
                  <field name="instruments_ids"/>
               
              </page>
              <page string="Medidas">
                  <field name="measurement_ids">
                    <tree>
                      <field name="name"/>
                      <field name="date_measurement"/>
                      <field name="date_measurement"/>
                    </tree>
                  </field>
               
              </page>
            </notebook>
            
           
          </sheet>
          <div class="oe_chatter" groups="base.group_multi_company">
            <field name="message_follower_ids" widget="mail_followers" />
            <field name="message_ids" widget="mail_thread" />
          </div>
        </form>

      </field>
    </record>


  </data>
</odoo>
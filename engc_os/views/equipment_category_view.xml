<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
		
			<record id="view_form_engc_os_equipment_category" model="ir.ui.view">
				<field name="name">engc.equipment.category.form</field>
				<field name="model">engc.equipment.category</field>
				<field name="arch" type="xml">
					<form>
						<sheet string="Ordem de Servico"> 
							<h1>
								<field name="name"/>
							</h1>
							<group>
								<!-- <group>
									<field name="responsibles" widget="many2many_tags" />
								</group> -->
								<group>
									<field name="maintenance_plan" string="Plano de Manutenção Padrão"/>
								</group>
							</group>
						</sheet>
						<div class="oe_chatter">
								<field name="message_follower_ids" widget="mail_followers"/>
								<field name="message_ids" widget="mail_thread"/>
            				</div>
					</form>

				</field>

			</record>

            <record id="view_form_engc_os_equipment_category_list" model="ir.ui.view">
				<field name="name">engc.equipment.category.list</field>
				<field name="model">engc.equipment.category</field>
				<field name="priority">15</field>
				<field name="arch" type="xml">
					<tree editable="top">
                        <field name="name" string="Categoria" />   
                        <field name="maintenance_plan" string="Plano de manutenção" options="{'create':false}" />   
                    </tree>
				</field>

			</record>
			

    </data>
</odoo>
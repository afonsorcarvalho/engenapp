<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Ação agendada para gerar OS de preventivas programadas em até 7 dias -->
        <record id="ir_cron_gera_os_preventivas_7_dias" model="ir.cron">
            <field name="name">Gerar OS para Preventivas (7 dias)</field>
            <field name="model_id" ref="model_engc_preventive"/>
            <field name="state">code</field>
            <field name="code">model.cron_gera_os_preventivas_7_dias()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="False"/>
            <field name="nextcall" eval="(DateTime.now() + relativedelta(days=1, hour=2, minute=0)).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>
    </data>
</odoo>

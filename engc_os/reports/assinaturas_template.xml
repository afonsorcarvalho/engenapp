<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_assinaturas_template">
        <div class="row mt-2">
            <div class="col-6">
                <table class="table table-borderless" id="engc_os_assinaturas_table">
                    <tr>
                        <td>
                            <t t-if="o.technician_signature_date">
                                <strong>Data:</strong> <span t-field="o.technician_signature_date"/>
                            </t>
                            <t t-if="not o.technician_signature_date">
                                Data:_______/_________/__________
                            </t>
                        </td>
                    </tr>
                   <tr>
                         <td width="100%" class="text-center pl-5 pr-5">
                          <div style="display: flex; flex-direction: column; justify-content: center; align-items: center;">
                              <img t-if="o.signature"  t-att-src="image_data_uri(o.signature)" style="max-height: 3.5cm; max-width: 8cm;"/>
                              <div t-if="not o.signature" style="min-height: 60px; border-bottom: 1px solid #000; width: 75%;"></div>
                          </div>
                        </td> 
                       
                    </tr>
                    <tr t-foreach="o.tecnico_id" t-as="line">
                        <td class="pl-5 pr-5 text-center">
                                        <span
                                    t-field="line.name" />
                            
                        </td>
                        <!-- <td><span t-field="o.name_digital_signature_client"/></td> -->
                    </tr>
                </table>
            </div>
            <div class="col-6">
                <table class="table table-borderless ">
                    <!-- Supervisor: data e assinatura -->
                    <tr>
                        <td>
                            <t t-if="o.supervisor_signature_date">
                                <strong>Data:</strong> <span t-field="o.supervisor_signature_date"/>
                            </t>
                            <t t-if="not o.supervisor_signature_date">
                                Data:_______/_________/__________
                            </t>
                        </td>
                    </tr>
                    <tr>
                        <td width="100%" class="text-center pl-5 pr-5">
                            <div style="display: flex; flex-direction: column; justify-content: center; align-items: center;">
                                <img t-if="o.signature2" t-att-src="image_data_uri(o.signature2)" style="max-height: 3.5cm; max-width: 8cm;"/>
                                <div t-if="not o.signature2" style="min-height: 60px; border-bottom: 1px solid #000; width: 75%;"></div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td class="pl-5 pr-5 text-center"><strong>Supervisor</strong></td>
                    </tr>
                   
                </table>
            </div>
        </div>
    </template>
</odoo>
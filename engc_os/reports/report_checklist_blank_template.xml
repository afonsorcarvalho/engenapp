<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="report_checklist_blank_template">
		<t t-call="web.html_container">
			<t t-foreach="docs" t-as="o">
				<t t-call="web.external_layout">
					<div class="page">
						<div class="row">
							<div class="col-6">
								<h2>
									Ordem de Serviço :
									<span t-field="o.name" />
								</h2>
							</div>
							<div class="col-6">
								<h2>
									Mês Referência:
									<t t-esc="o.date_scheduled.strftime('%m/%Y')">
									</t>
								</h2>
							</div>
							<!-- <div  > -->
							<!-- <img width="100px" height="100px" t-att-src="'/report/barcode/QR/%s' % 'My text in qr code'"/> -->
							<!-- <img class="col-6 float-right" width="100" height="100" t-att-src="'/report/barcode/QR/%s%s' % ('http://server.diagnostica-ma.com.br:8069/report/pdf/dgt_os.report_ordem_servico/',o.id)"/> -->
							<!-- </div> -->
						</div>
						<div class="row">
							<div class="col-12 mt-1">
								<t t-call="engc_os.report_cliente_equipment_template" />
							</div>
						</div>
						<t t-if="o.origin">
							<div class="row ">
								<div class="col-6">
									<strong>
										Solicitação Origem:
									</strong>
									<br />
									<span t-field="o.origin" />
								</div>
							</div>
						</t>
						<br />
						<div class="row" t-if="o.check_list_id">
							<div class="col-12">
								<h4 t-if="o.check_list_id">
									Checklist
									<span t-field="o.maintenance_type" />
								</h4>
								<table class="table table-sm table-condensed table-striped  table-bordered" t-if="o.check_list_id">
									<thead>
										<tr>
											<!--
											<th><strong>Status</strong></th>
											<th class="text-right"><strong>Quantidade</strong></th>
											-->
											<th>
												<strong>
													Item
												</strong>
											</th>
											<th>
												<strong>
													Instrução
												</strong>
											</th>
											<th>
												<strong>
													Verificado
												</strong>
											</th>
											<th>
												<strong>
													Medições
												</strong>
											</th>
											<th>
												<strong>
													Unidades
												</strong>
											</th>
											<th width="40%">
												<strong>
													Observações
												</strong>
											</th>
										</tr>
									</thead>
									<tbody>
										<t t-if="o.check_list_id">
											<!--
											<tr>
											<td colspan="4"><strong>Peças Programadas</strong></td>
											</tr>
											-->
											<t t-set="i" t-value="1" />
											<tr t-foreach="o.check_list_id" t-as="line">
												<td>
													<span t-esc="i" />
													<t t-set="i" t-value="i+1" />
												</td>
												<td>
													<span t-field="line.instruction" />
												</td>
												<td>
												</td>
												<td>
													<t t-if="line.tem_medicao == True">
													</t>
													<t t-else="">
													</t>
												</td>
												<td>
													<t t-if="line.tem_medicao == True">
														<span t-field="line.magnitude" />
													</t>
													<t t-else="">
													</t>
												</td>
												<td>
												<!--	<span t-field="line.observations" />-->
												</td>
											</tr>
										</t>
										<tr>
											<td >
												xxxxxxx
											</td>
											<td>
												Hora de início:
											</td>
											<td>
												
											</td>
											<td>
											</td>
											<td>
											</td>
											<td>
											</td>
										</tr>
										<tr>
											<td >
												xxxxxxx
											</td>
											<td>
												Hora de término:
											</td>
											<td>
												
											</td>
											<td>
											</td>
											<td>
											</td>
											<td>
											</td>
										</tr>
									</tbody>
								</table>
							</div>
						</div>
						<t t-call="engc_os.report_assinaturas_template" />
						<div class="oe_structure" />
					</div>
				</t>
			</t>
		</t>
	</template>
</odoo>

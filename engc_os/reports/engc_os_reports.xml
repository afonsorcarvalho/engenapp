<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="report_engc_os_calibration_certificate" model="ir.actions.report">
            <field name="name">Impressão de Certificado de Calibração</field>
            <field name="model">engc.calibration</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">engc_os.calibration_certificate_template</field>
            <field name="report_file">engc_os.calibration_certificate_template</field>
            <field name="print_report_name">'%s - certificado_calibracao - %s' % (object.name, object.client_id.name)</field>
            <field name="binding_model_id" ref="model_engc_calibration"/>
            <field name="binding_type">report</field>
        </record>
        <record id="report_engc_os" model="ir.actions.report">
            <field name="name">Impressão de Ordem de serviço</field>
            <field name="model">engc.os</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">engc_os.report_os_template</field>
            <field name="report_file">engc_os.report_os_template</field>
            <field name="print_report_name">'Ordem de servico - %s' % (object.name)</field>
            <field name="binding_model_id" ref="model_engc_os"/>
            <field name="binding_type">report</field>
        </record>
        <record id="report_engc_os_blank" model="ir.actions.report">
            <field name="name">Checklist em branco</field>
            <field name="model">engc.os</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">engc_os.report_checklist_blank_template</field>
            <field name="report_file">engc_os.report_checklist_blank_template</field>
            <field name="print_report_name">'Checklist em branco - %s' % (object.name)</field>
            <field name="binding_model_id" ref="model_engc_os"/>
            <field name="binding_type">report</field>
        </record>
        <record id="report_relatorio_atendimento_blank" model="ir.actions.report">
            <field name="name">Relatório de Atendimento em Branco</field>
            <field name="model">engc.os</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">engc_os.report_relatorio_atendimento_blank_template</field>
            <field name="report_file">engc_os.report_relatorio_atendimento_blank_template</field>
            <field name="print_report_name">'Relatorio Atendimento - %s' % (object.name)</field>
            <field name="binding_model_id" ref="model_engc_os"/>
            <field name="binding_type">report</field>
        </record>
        <record id="report_relatorio_atendimento_resumo" model="ir.actions.report">
            <field name="name">Relatório Resumido de Atendimentos</field>
            <field name="model">engc.os.relatorios</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">engc_os.report_relatorio_atendimento_resumo_template</field>
            <field name="report_file">engc_os.report_relatorio_atendimento_resumo_template</field>
            <field name="print_report_name">object._get_report_base_filename()</field>
        </record>
        <record id="report_maintenance_plan" model="ir.actions.report">
            <field name="name">Relatório de Plano de Manutenção</field>
            <field name="model">engc.maintenance_plan</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">engc_os.report_maintenance_plan_template</field>
            <field name="report_file">engc_os.report_maintenance_plan_template</field>
            <field name="print_report_name">'Plano de Manutenção - %s' % (object.name)</field>
            <field name="binding_model_id" eval="ref('model_engc_maintenance_plan', raise_if_not_found=False) or False"/>
            <field name="binding_type">report</field>
        </record>
        <record id="report_cronograma_preventiva" model="ir.actions.report">
            <field name="name">Cronograma de Preventiva</field>
            <field name="model">engc.preventive.cronograma</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">engc_os.report_cronograma_preventiva_template</field>
            <field name="report_file">engc_os.report_cronograma_preventiva_template</field>
            <field name="print_report_name">'Cronograma Preventiva - %s' % (object.name)</field>
            <field name="binding_model_id" eval="ref('model_engc_preventive_cronograma', raise_if_not_found=False) or False"/>
            <field name="binding_type">report</field>
        </record>
        <!-- Paper Format para Cronograma de Equipamento em Paisagem -->
        <record id="paperformat_equipment_cronograma_landscape" model="report.paperformat">
            <field name="name">Cronograma Equipamento - Paisagem</field>
            <field name="format">A4</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">30</field>
            <field name="margin_bottom">30</field>
            <field name="margin_left">1</field>
            <field name="margin_right">1</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">20</field>
            <field name="dpi">90</field>
        </record>
        
        <record id="report_equipment_cronograma" model="ir.actions.report">
            <field name="name">Cronograma de Preventivas do Equipamento</field>
            <field name="model">engc.equipment</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">engc_os.report_equipment_cronograma_template</field>
            <field name="report_file">engc_os.report_equipment_cronograma_template</field>
            <field name="print_report_name">'Cronograma Preventivas - %s' % (object.name)</field>
            <field name="binding_model_id" eval="ref('model_engc_equipment', raise_if_not_found=False) or False"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="paperformat_equipment_cronograma_landscape"/>
        </record>
    </data>
</odoo>
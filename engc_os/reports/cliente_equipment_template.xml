<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_cliente_equipment_template">

        <div class="row">

            <!-- DADOS EQUIPAMENTO -->
            <div class="col-6">
                <table class="table table-borderless" name="engc_equipment_table">
                    <tbody>
                        <tr>
                            <td colspan="2">Equipamento:</td>
                            <td colspan="4">
                                <strong>
                                    <span t-field="o.equipment_id.name" />
                                </strong>
                            </td>
                        </tr>
                        <tr>
                            <td>Nº Série:</td>
                            <td>
                                <b>
                                    <span t-field="o.equipment_id.serial_number" />
                                </b>
                            </td>
                            <td>Modelo:</td>
                            <td>
                                <b>
                                    <span t-if="o.equipment_id.model" t-field="o.equipment_id.model" />
                                </b>
                            </td>
                            <td> Marca:</td>
                            <td>
                                <b>
                                    <span t-if="o.equipment_id.marca_id.name"
                                        t-field="o.equipment_id.marca_id.name" />
                                </b>
                            </td>
                        </tr>
                        <tr>
                            <td>Patrimonio:</td>
                            <td>
                                <b>
                                    <span t-field="o.equipment_id.serial_number" />
                                </b>
                            </td>
                            <td>TAG:</td>
                            <td>
                                <b>
                                    <span t-if="o.equipment_id.model" t-field="o.equipment_id.model" />
                                </b>
                            </td>
                            <td> </td>
                            <td></td>
                        </tr>
                    </tbody>

                </table>
            </div>

            <!-- DADOS CLIENTE -->
            <div class="col-6">
                <table t-if="o.client_id" class="table table-sm table-borderless" name="engc_client_table">
                    <tbody>
                        <tr>
                            <td>Cliente:</td>
                            <td colspan="3">
                                <strong>
                                    <span class="text-uppercase" t-field="o.client_id.name" />
                                </strong>
                            </td>
                        </tr>
                        <tr>
                            <td>CNPJ/CPF:</td>
                            <td>
                                <b>
                                    <span t-if="'l10n_br_cnpj_cpf' in o.client_id._fields and o.client_id.l10n_br_cnpj_cpf" t-field="o.client_id.l10n_br_cnpj_cpf" />
                                    <span t-if="'l10n_br_cnpj_cpf' not in o.client_id._fields or not o.client_id.l10n_br_cnpj_cpf">-</span>
                                </b>
                            </td>
                            <td>Contato:</td>
                            <td>
                                <b>
                                    <span t-if="o.client_id.mobile" t-field="o.client_id.mobile" />
                                </b>
                            </td>
                        </tr>
                        <tr>
                            <td> Endereço:</td>
                            <td colspan="4">
                                <b>
                                    <span t-if="o.client_id.street" t-field="o.client_id.street" />
                                   
                                </b>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>


